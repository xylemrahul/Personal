<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingLeft="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Details Of"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="#d8d8d8"
                android:padding="10dp" >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="Member Name "
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_memname"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:inputType="text"
                    android:textColor="#333333"
                    android:textSize="15sp" >
                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#b4c0c8"
                android:padding="10dp" >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="Group Name "
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_grpname"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:inputType="text"
                    android:textColor="#333333"
                    android:textSize="15sp" >
                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#d8d8d8"
                android:padding="10dp" >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="Created Date "
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:inputType="text"
                    android:textColor="#333333"
                    android:textSize="15sp" >
                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#b4c0c8"
                android:padding="10dp" >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="Contact no "
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:maxLines="15"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#d8d8d8"
                android:padding="10dp" >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="Age"
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#b4c0c8"
                android:padding="10dp" >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="Sex"
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#d8d8d8"
                android:padding="10dp" >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="Email Id"
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#b4c0c8"
                android:padding="10dp" >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="Address"
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#d8d8d8"
                android:padding="10dp" >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="Password"
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_pass"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#b4c0c8"
                android:padding="10dp" >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="Username"
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_uname"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#d8d8d8"
                android:padding="10dp" >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="Type"
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/C:/Users/Raj/Assignment_Workspace/Assign_Management/res/layout/dialog_mem_details.xml -->